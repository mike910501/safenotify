# SafeNotify Production Environment Configuration

# Database
DATABASE_URL="postgresql://safenotify_user:password@localhost:5432/safenotify_prod"

# Security
JWT_SECRET="your-ultra-secure-jwt-secret-minimum-32-characters-long"
CORS_ORIGIN="https://yourdomain.com"

# Twilio WhatsApp Business API
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_WHATSAPP_NUMBER="+14155238886"

# Redis (for Bull Queue system)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="your-secure-redis-password"

# OpenAI (for template validation)
OPENAI_API_KEY="your-openai-api-key"

# Email (for notifications and password reset)
EMAIL_USER="noreply@yourdomain.com"
EMAIL_PASS="your-email-password"
EMAIL_FROM="SafeNotify <noreply@yourdomain.com>"

# Wompi Payment Gateway
WOMPI_PUBLIC_KEY="pub_prod_your-public-key"
WOMPI_PRIVATE_KEY="prv_prod_your-private-key"
WOMPI_ENVIRONMENT="production"

# Server Configuration
PORT=3001
NODE_ENV=production

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/safenotify.log"

# Rate Limiting
RATE_LIMIT_WHATSAPP=50  # messages per second
RATE_LIMIT_SMS=100      # messages per second

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=5000